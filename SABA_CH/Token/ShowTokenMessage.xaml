<Window x:Class="SABA_CH.Token.ShowTokenMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SABA_CH.Token"
        mc:Ignorable="d"
        Title="ShowTokenMessage" Height="300" Width="300">
    <Grid Background="#FFDEE1EA">
        <TextBox Name="TokenMessagetxt" Background="White" FontSize="14" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0" Height="165" VerticalAlignment="Top"/>
        <Button Name="btnNO" Margin="36,208,176,37" Content="NO " Click="NOButton_Click" Background="#FFEA7D54" ></Button>
        <Button x:Name="btnYes" Margin="142,208,70,37" Content="Yes " Click="YesButton_Click" Background="#FFACCD99" />
    </Grid>
</Window>
