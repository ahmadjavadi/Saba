<Window x:Class="SABA_CH.UI.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="355.024" Width="640" ResizeMode="NoResize" Activated="Window_Activated" Closing="Window_Closing">
    <Grid x:Name="GridMain" Margin="0,0,0,00
          ">
        
        <Image x:Name="Bachground_Image" Source="/Saba;component/Image/About2.jpg" Stretch="Fill" Grid.ColumnSpan="3" Grid.RowSpan="8"/>
        <StackPanel Grid.Row="0">
            <Label x:Name="Lbl1" Content="شرکت ره روان سپهر اندیشه" Margin="170,25,5,5" Padding="0"   FontFamily="Tahoma"   FontSize="16" FlowDirection="RightToLeft" VerticalContentAlignment="Stretch"
