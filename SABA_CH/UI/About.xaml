            <Label x:Name="Lbl2" Content="نرم افزار مدیریت اطلاعات کنتورهای هوشمند آب و برق" Margin="120,5,5,5"   FontFamily="Tahoma"   FontSize="16" Grid.ColumnSpan="2" FlowDirection="RightToLeft" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" FontWeight="Bold" Foreground="#FFF6F6F6" />


            <Label x:Name="Lbl3" Content="V1.0.9.1"  Margin="235,5,5,5" Padding="0"   FontFamily="Tahoma"   FontSize="14" Grid.ColumnSpan="2" FlowDirection="RightToLeft" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontWeight="Bold" Foreground="#FFF6F6F6" Grid.RowSpan="2" HorizontalAlignment="Left"/>
            <Label Content="WebSite:WWW.RSA.CO.ir" Margin="200,5,5,5" Padding="0"   FontFamily="Tahoma"   FontSize="14" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontWeight="Bold" Foreground="#FFF6F6F6"/>
            <Label Content="Tel:88102351-7" Grid.Row="7" Margin="200,5,5,5" Padding="0"   FontFamily="Tahoma"   FontSize="14" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontWeight="Bold" Foreground="#FFF6F6F6" RenderTransformOrigin="-0.009,0.318"/>

            <DockPanel>
                <Label x:Name="LblExpiredDate1" Content="1399/09/12"  Margin="200,5,5,5" Padding="0"   FontFamily="Tahoma"   FontSize="14" Grid.ColumnSpan="2" FlowDirection="RightToLeft" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FontWeight="Bold" Foreground="#FFF6F6F6" Grid.RowSpan="2" HorizontalAlignment="Left"/>
